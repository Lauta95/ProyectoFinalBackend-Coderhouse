<h2 class="titulo">Cart Details</h2>
<a href="/">Back to Home</a>
<a href="/products">Go back to Products</a>
<a href="/">Buy!</a>

<div class="cart-details">
    <h3>Products in Cart</h3>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            {{#each cart.products}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td>{{this.quantity}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>